<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <org.faudroids.boredrudolf.ui.CustomSwipeRefreshLayout
        android:id="@+id/layout_swipe"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/margin_default"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:text="@string/pull_hint"
                android:layout_marginBottom="32dp"
                android:layout_marginTop="@dimen/margin_default"
                android:gravity="center"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#e4e4e4"
                android:layout_marginLeft="@dimen/margin_default"
                android:layout_marginRight="@dimen/margin_default"
                android:layout_marginBottom="@dimen/margin_default"
                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/loading_time"
                    android:textSize="16sp"
                    android:textColor="@color/grey"
                    android:layout_centerVertical="true"
                    />

                <Spinner
                    android:id="@+id/spinner_loading_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    />

            </RelativeLayout>

            <Button
                android:id="@+id/btn_stop_loading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/stop_loading"
                android:layout_marginTop="@dimen/margin_default_half"
                />

        </LinearLayout>

    </org.faudroids.boredrudolf.ui.CustomSwipeRefreshLayout>

</LinearLayout>

